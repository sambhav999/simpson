    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/supertest": "^7.2.0",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "eslint": "^8.57.0",
    "jest": "^30.2.0",
    "prisma": "^5.10.2",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
