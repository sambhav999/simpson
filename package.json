{
  "name": "simpredict-backend",
  "version": "1.0.0",
  "description": "SimPredict - Non-custodial prediction marketplace backend powered by Solana and DFlow",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "build:render": "npm install && npx prisma generate && npm run build",
    "start": "node dist/main.js",
    "start:render": "npx prisma migrate deploy && node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:push": "prisma db push"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@pythnetwork/hermes-client": "^3.1.0",
    "@pythnetwork/price-service-client": "^1.11.0",
