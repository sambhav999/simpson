    "@resvg/resvg-js": "^2.6.2",
    "@solana/spl-token": "^0.4.6",
    "@solana/web3.js": "^1.91.7",
    "axios": "^1.6.8",
    "axios-retry": "^4.1.0",
    "bullmq": "^5.4.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
